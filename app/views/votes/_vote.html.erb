<div class="span1 well text-center"
     id="<%= "#{obj.class.name.downcase}_#{obj.id}_vote" %>">
  <% if obj.user_vote(current_user).nil? %>
    <%= link_to up_vote_path, method: :post, remote: true do %>
      <i class="fa fa-chevron-up"></i>
    <% end %>
    <br>
      <%= pluralize(obj.votes_sum, "vote") %>
    <br>
    <%= link_to down_vote_path, method: :post, remote: true do %>
      <i class="fa fa-chevron-down"></i>
    <% end %>
  <% else %>
    <%= link_to up_revote_path, method: :put, remote: true do %>
      <i class="fa fa-chevron-up <%= "voted" if obj.user_vote(current_user).vote == true %>"></i>
    <% end %>
    <br>
      <%= pluralize(obj.votes_sum, "vote") %>
    <br>
    <%= link_to down_revote_path, method: :put, remote: true do %>
      <i class="fa fa-chevron-down <%= "voted" if obj.user_vote(current_user).vote == false %>"></i>
    <% end %>
  <% end %>
</div>
