<div class="row">
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, post_path(post)%></h4>
    <p>
      <%= post.description %>
    </p>
    <span class="quiet">posted by</span>
    <%= post.user ? post.user.username : "Unknown" %>
    <small>at <%= post.created_at %></small>
    <span>
      <%= link_to pluralize(post.comments.size, "Comment"), post_path(post) %>
    </span>
  </div>
</div>
