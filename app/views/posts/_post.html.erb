<div class="row">
  <%= render "votes/vote", vote_obj(post, :vote_post_path, :revote_post_path) %>
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p>
      <%= post.description %>
    </p>
    <span class="quiet">posted by</span>
    <%= post.user ? post.user.username : "Unknown" %>
    <small>at <%= time_format post.created_at %></small>
    <span>
      <%= link_to pluralize(post.comments.size, "Comment"), post_path(post) %>
    </span>
  </div>
</div>
