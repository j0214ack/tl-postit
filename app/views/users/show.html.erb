<%= render "shared/content_title", title: "Profile: #{@user.username}" %>

<div class="row">
  <div class="well span8">
    <dl class="">
      <dt>Name</dt>
      <dd><%= @user.username %></dd>
    </dl>
  </div>
</div>

<h5><%= "#{@user.username}'s" %> Activity</h5>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><%= link_to "Posts (#{@posts.size})", "#user_posts", :"data-toggle" => "tab" %></li>
    <li><%= link_to "Comments (#{@comments.size})", "#user_comments", :"data-toggle" => "tab" %></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="user_posts">
      <%= render @posts %>
    </div>
    <div class="tab-pane" id="user_comments">
      <%= render @comments %>
    </div>
  </div>
</div>
